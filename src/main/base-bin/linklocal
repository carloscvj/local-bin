#!/bin/sh

#--------FUNCTIONS--------------------------------------------------
say() {
if [ "${args}" ]
    then
        nada=""
    else
        echo ${*}
fi
}
#------END FUNCTIONS-----------------------------------------------------

say "--------------------------------------------------------------------"

if [ "${INSTALACION}" ]
then
	say "INSTALACION=${INSTALACION}"
else
	export INSTALACION=/usr/local;say "INSTALACION=${INSTALACION}"
fi
say "--------------------------------------------------------------------"
say "              L I N K A N D O   bin"

for i in "${INSTALACION}"/*/base-bin/*
do
    p=`basename ${i}`
    rm -f "${INSTALACION}"/bin/${p}
    echo "ln -s ${i} ${INSTALACION}/bin/${p}"
    ln -s ${i} "${INSTALACION}"/bin/${p}
done
say "--------------------------------------------------------------------"
say "              L I N K A N D O   lib"

for i in "${INSTALACION}"/*/base-lib/*
do
    p=`basename ${i}`
    rm -f "${INSTALACION}"/lib/${p}
    echo "ln -s ${i} ${INSTALACION}/lib/${p}"
    ln -s ${i} "${INSTALACION}"/lib/${p}
done
say "--------------------------------------------------------------------"